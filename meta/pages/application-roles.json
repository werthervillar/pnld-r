{
  "access": [
    "Authenticated"
  ],
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "text": "Perfis",
          "type": "heading"
        },
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "addText": "Novo",
                  "allowAdd": true,
                  "allowDelete": true,
                  "columns": [
                    {
                      "property": "Name",
                      "title": "Nome"
                    }
                  ],
                  "data": "${getRolesResult}",
                  "emptyText": "Sem registros.",
                  "events": {
                    "add": [
                      {
                        "path": "add-application-role",
                        "type": "popup"
                      }
                    ],
                    "delete": [
                      {
                        "error": [
                          {
                            "detail": "${result.error.message}",
                            "severity": "error",
                            "summary": "Cannot delete role",
                            "type": "notify"
                          }
                        ],
                        "name": "Security.deleteRole",
                        "parameters": [
                          {
                            "name": "id",
                            "value": "${event.Id}"
                          }
                        ],
                        "then": [
                          {
                            "detail": "Role \"${event.Name}\" has been deleted.",
                            "severity": "info",
                            "summary": "Success",
                            "type": "notify"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "name": "grid0",
                  "type": "grid"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "Security.getRoles",
        "then": [
          {
            "name": "getRolesResult",
            "type": "set",
            "value": "${result.value}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "Application Roles"
}