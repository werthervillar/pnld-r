{
  "access": [
    "Administrador",
    "Super"
  ],
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "text": "Reuniões",
          "type": "heading"
        },
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "addText": "Novo",
                  "allowAdd": true,
                  "allowDelete": true,
                  "allowFiltering": true,
                  "allowMultiSorting": false,
                  "allowPaging": true,
                  "allowSorting": true,
                  "columns": [
                    {
                      "property": "Nome",
                      "title": "Nome",
                      "type": "string"
                    },
                    {
                      "format": "date-time",
                      "property": "Inicio",
                      "template": "${data.Inicio | date:\"dd/MM/yyyy\"}",
                      "title": "Início",
                      "type": "string"
                    },
                    {
                      "format": "date-time",
                      "property": "Fim",
                      "template": "${data.Fim | date:\"dd/MM/yyyy\"}",
                      "title": "Fim",
                      "type": "string"
                    }
                  ],
                  "count": "${getReuniosCount}",
                  "data": "${getReuniosResult}",
                  "emptyText": "Sem registros.",
                  "events": {
                    "add": [
                      {
                        "path": "add-reunio",
                        "type": "popup"
                      }
                    ],
                    "delete": [
                      {
                        "error": [
                          {
                            "detail": "Unable to delete Reunio",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "pnld.deleteReunio",
                        "parameters": [
                          {
                            "name": "Reuniao",
                            "value": "${event.Reuniao}"
                          }
                        ],
                        "then": [
                          {
                            "detail": "Reunio deleted!",
                            "severity": "success",
                            "summary": "Success",
                            "type": "notify"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "loadData": [
                      {
                        "name": "pnld.getReunios",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$expand",
                            "value": ""
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          }
                        ],
                        "then": [
                          {
                            "name": "getReuniosResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getReuniosCount",
                            "type": "set",
                            "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "Reuniao",
                            "value": "${event.Reuniao}"
                          }
                        ],
                        "path": "edit-reunio",
                        "type": "popup"
                      }
                    ]
                  },
                  "filterDateFormat": "dd/MM/yyyy",
                  "name": "grid0",
                  "title": "",
                  "type": "grid"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "pnld.getReunios",
        "parameters": [
          {
            "name": "$top",
            "value": "this.grid0.allowPaging ? this.grid0.pageSize : null"
          },
          {
            "name": "$skip",
            "value": "this.grid0.allowPaging ? 0 : null"
          },
          {
            "name": "$count",
            "value": "this.grid0.allowPaging"
          }
        ],
        "then": [
          {
            "name": "getReuniosResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getReuniosCount",
            "type": "set",
            "value": "this.grid0.allowPaging ? result['@odata.count'] : ${result.value.length}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "Reunioes"
}