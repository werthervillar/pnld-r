{
  "access": [
    "Authenticated"
  ],
  "components": [
    {
      "components": [
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "cancelText": "Cancelar",
                  "data": "${user}",
                  "deleteText": "Excluir",
                  "events": {
                    "cancel": [
                      {
                        "type": "back"
                      }
                    ],
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "${result.error.message}",
                            "severity": "error",
                            "summary": "Cannot update user",
                            "type": "notify"
                          }
                        ],
                        "name": "Security.updateUser",
                        "parameters": [
                          {
                            "name": "Id",
                            "value": "${parameters.Id}"
                          },
                          {
                            "name": "User",
                            "value": "${event}"
                          }
                        ],
                        "then": [
                          {
                            "type": "back"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "fields": [
                    {
                      "disabled": true,
                      "property": "UserName",
                      "requiredText": "is required",
                      "title": "Nome",
                      "type": "string"
                    },
                    {
                      "property": "Email",
                      "requiredText": "is required",
                      "title": "E-mail",
                      "type": "string"
                    },
                    {
                      "data": "${roles}",
                      "multiple": true,
                      "property": "RoleNames",
                      "requiredText": "is required",
                      "textProperty": "Name",
                      "title": "Perfil",
                      "type": "lookup",
                      "valueProperty": "Name"
                    },
                    {
                      "property": "Password",
                      "requiredText": "is required",
                      "title": "Senha",
                      "type": "password"
                    },
                    {
                      "compare": "Password",
                      "property": "ConfirmPassword",
                      "requiredText": "is required",
                      "title": "Confirmar senha",
                      "type": "password"
                    }
                  ],
                  "name": "form0",
                  "submitText": "Salvar",
                  "type": "form"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "Security.getUserById",
        "parameters": [
          {
            "name": "Id",
            "value": "${parameters.Id}"
          }
        ],
        "then": [
          {
            "name": "user",
            "type": "set",
            "value": "${result}"
          }
        ],
        "type": "invoke"
      },
      {
        "name": "Security.getRoles",
        "then": [
          {
            "name": "roles",
            "type": "set",
            "value": "${result.value}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "Editar Usu√°rio"
}